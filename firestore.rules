rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Global admin override - admins have full read/write access
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection (company profiles - public read for homepage)
    match /users/{userId} {
      // Public can read user profiles (for company listings)
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Products collection (public read for homepage/listings)
    match /products/{productId} {
      // Public can view products
      allow read: if true;
      // Only authenticated users can create/edit their own products (admins can create on behalf of users)
      allow create: if isAuthenticated() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Requests/RFQs collection (public read for homepage/listings)
    match /requests/{requestId} {
      // Public can view RFQs
      allow read: if true;
      // Only authenticated users can create/edit their own requests (admins can create on behalf of users)
      allow create: if isAuthenticated() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());

      // Quotes subcollection (offers for RFQs)
      match /quotes/{quoteId} {
        // Helper: Check if user is the RFQ owner
        function isRequestOwner() {
          return request.auth.uid == get(/databases/$(database)/documents/requests/$(requestId)).data.userId;
        }

        // READ: Only request owner or admin can view quotes
        allow read: if isAuthenticated() && (isRequestOwner() || isAdmin());

        // CREATE: Any authenticated user can submit a quote
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

        // UPDATE: Only request owner can update quote status (accept/reject)
        allow update: if isAuthenticated() && (isRequestOwner() || isAdmin());

        // DELETE: Only admin
        allow delete: if isAdmin();
      }
    }

    // Categories collection (public read for dropdowns/filters)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Fairs collection (public read)
    match /fairs/{fairId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // News collection (public read)
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Conversations collection (private - only participants)
    match /conversations/{conversationId} {
      function isParticipant() {
        return isAuthenticated() && request.auth.uid in resource.data.participants;
      }

      function willBeParticipant() {
        return isAuthenticated() && request.auth.uid in request.resource.data.participants;
      }

      allow read: if isAuthenticated() && (
        request.auth.uid in resource.data.participants || isAdmin()
      );
      allow create: if isAuthenticated() && willBeParticipant();
      allow update: if isParticipant() || isAdmin();
      allow delete: if isAdmin();

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && (
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants || isAdmin()
        );
        allow create: if isAuthenticated() && (
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.senderId == request.auth.uid
        );
        // Allow update if user is the sender OR a participant (for marking as read)
        allow update: if isAuthenticated() && (
          resource.data.senderId == request.auth.uid ||
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants ||
          isAdmin()
        );
        allow delete: if isAdmin();
      }
    }

    // User notifications subcollection (private)
    match /users/{userId}/notifications/{notificationId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && (
        isAdmin() ||
        (
          request.resource.data.type in ['message', 'quote', 'system', 'admin', 'new_message', 'conversation_created', 'quote_received', 'quote_accepted', 'quote_rejected', 'new_user_approval'] &&
          request.resource.data.keys().hasAll(['type', 'title', 'isRead']) &&
          request.resource.data.isRead == false &&
          request.auth.uid != userId
        )
      );
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Newsletter collection (public create)
    match /newsletter/{subscriberId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
